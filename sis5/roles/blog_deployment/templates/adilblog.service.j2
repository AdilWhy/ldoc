[Unit]
Description=Adil Hugo Blog Container
After=network.target

[Service]
Type=forking
ExecStartPre=/usr/bin/podman pull {{ blog_image }}
ExecStart=/usr/bin/podman run -d --name {{ blog_container_name }} -p {{ blog_port }}:80 {{ blog_image }}
ExecStop=/usr/bin/podman stop {{ blog_container_name }}
ExecStopPost=/usr/bin/podman rm -f {{ blog_container_name }}
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
